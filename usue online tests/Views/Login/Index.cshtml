@model string

@{
    ViewData["Title"] = "Вход";
}

<form class="space-y-4 my-36 max-w-sm mx-auto" action="/login/loginin" method="post">
    @if (!string.IsNullOrEmpty(Model))
    {
        <div class="alert alert-error shadow-lg">
            <div>
                <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current flex-shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
                <span>@Model</span>
            </div>
        </div>
    }
    <input class="input w-full" placeholder="Почта" name="login" type="text"/>
    <input class="input w-full" placeholder="Пароль" name="password" type="password"/>
    <input class="btn w-full" type="submit" value="Войти"/>
</form>