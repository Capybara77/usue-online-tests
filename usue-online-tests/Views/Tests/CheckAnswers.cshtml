@model TestResult
@inject GetUserByCookie GetUserByCookie

@{
    ViewData["Title"] = "Результат прохождения теста";
}

<div class="prose">
    <h1 class="mb-8">Результат прохождения</h1>
</div>

<div class="stats shadow stats-vertical md:stats-horizontal">
    <div class="stat">
        <div class="stat-title">Правильные ответы</div>
        <div class="stat-value">@Model.TotalRight/@Model.Total</div>
    </div>
    @if (Model.Exception != null && GetUserByCookie.GetUser().Role is Roles.Admin or Roles.Teacher)
    {
        <div>
            <h1>Произошла ошибка при проверке ответа. Текст ошибки:</h1>
            <h2>@Model.Exception.Message</h2>
            <h3>@Model.Exception.StackTrace</h3>
        </div>
    }
